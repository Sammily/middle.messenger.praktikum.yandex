@import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap");
@import url("./styles/variables.pcss");
@import url("./styles/mixins.pcss");
@import url("./styles/button.pcss");
@import url("./styles/form.pcss");
@import url("./styles/profile.pcss");
@import url("./styles/chat.pcss");
@import url("./styles/error.pcss");
@import url("./styles/modal.pcss");

html {
    font-size: 10px;
}

body {
    margin: 0;
}

.container {
    display: flex;
    justify-content: center;
    align-content: center;
    flex-flow: column wrap;
    height: 100vh;
    background-color: var(--main-bg-color);
}

.navigation {
    ul {
        display: flex;
        justify-content: center;
        list-style-type: none;
        padding: 0;
        margin: 0;
    }
}
